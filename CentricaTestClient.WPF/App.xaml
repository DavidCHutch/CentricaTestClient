<Application x:Class="CentricTestClient.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:CentricaTestClient.WPF.ViewModels"
             xmlns:viewsDistrict="clr-namespace:CentricaTestClient.WPF.Views.District" 
             xmlns:views="clr-namespace:CentricaTestClient.WPF.Views">
            
    <Application.Resources>

        <!--Merge styling-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
                <ResourceDictionary Source="/Styles/NavigationBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:DistrictsViewModel}">
                <viewsDistrict:DistrictsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:OrdersViewModel}">
                <views:OrdersView/>
            </DataTemplate>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
